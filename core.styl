calendar
  display: block;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  background: white;
  width: 400px;
  border: solid 1px #cccccc;
  margin 0 auto
  margin-bottom: 10px;
  border-radius: 4px;
  box-shadow: 1px 1px 15px 1px #ccc;
  overflow: hidden;
  > .ng_calender .header
    float: left;
    width: 100%;
    background: Cred;
    height: 40px;
    color: #fff;
    position relative
  .ng_calender
    .header
      > *
        height: 40px;
        line-height: 40px !important;
        display: inline-block;
        vertical-align: middle;
      > i
        float: left;
        width: 40px;
        font-weight: bold;
        position: relative;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        padding: 0 10px;
        cursor: pointer;
        font-size: 24px;
        text-align center
        &.ion-arrow-left-b
          text-align: left;
          z-index: 2;
        &.ion-arrow-right-b
          text-align: right;
          float: right;
          z-index: 2;
      > span
        float: left;
        font-weight: bold;
        text-transform: uppercase;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        color: inherit;
        text-shadow: 1px 1px rgba(0, 0, 0, 0.4);
        position: absolute;
        left: 50%;
        top: 0;
        margin: 0;
        font-size 16px
        padding: 0 40px;
        white-space: nowrap;
        width: auto;
        text-align: left;
        transform: translate(-50%,0);
        z-index: 1;
        transition all .6s linear
      &.shrink
        >span
          font-size 13px
          left: 0;
          transform: translate(0,0);
  .week
    float: left;
    width: 100%;
    border-top: solid 1px #eee;
    /*transition all 0.2s ease*/
    &.shrink
      border-top none
    &:first-child
      border-top: none;
    > span.day
      float: left;
      width: 14.28571429%;
      box-sizing: border-box;
      -moz-box-sizing: border-box;
      border-left: solid 1px #eee;
      text-align: center;
      height: 40px;
      line-height: 30px !important;
      display: inline-block;
      vertical-align: middle;
      background: white;
      cursor: pointer;
      color: Cpurple;
      position relative
      opacity 1
      font-size: 13px;
      font-weight: 500;
      overflow: hidden;
      box-shadow: 0px 1px 2px #F5F5F5 inset;
      transition all 0.5s ease-in-out
      &:before
        content ""
        background Cgreen
        absolute left 50% top 50%
        width 0
        height 0
        opacity 0.2
        border-radius 50%
        transition all 0.4s anim_func
      &:hover
        background: #f1f1f1;
      &:first-child
        border-left: none;
      &.today
        background: #E3F2FF;
      &.other_month
        color: #C0C0C0;
      &.shrink
        opacity 0
        width: 0 !important;
        height: 0 !important;
      &.selected
        background: transparent;
        color: white;
        border-left 0
        &:before
          content ""
          background #0A516D
          absolute left 0 top 0%
          width 100%
          height 100%
          border-radius 0
          opacity 1
        > span
          position relative
        > .day_num
          color: #fff;
      >i
        position absolute
        opacity 0
        font-size: 0;
        line-height 0
        top 0
        left -999px
        color transparent
        z-index: 100;
        transition all 0.4s ease
        &.ion-arrow-right-a
          left auto
          right -999px
      > span
          line-height: 40px;
          font-size: 13px;
          transition font-size  0.6s anim_func, line-height  0.6s anim_func
      > .day_num
          display block
          line-height: 32px;
          height: 40px;
          overflow hidden
          > .day_event
            display: block;
            height: 4px;
            width: 80%;
            font-size: 1px;
            color transparent
            position: relative;
            margin-left: 10%;
            &:before
              content ""
              absolute left 0 top 0
              transition all 0.4s ease
              width 100%
              height 100%
              background #f1f1f1
            &:after
              content ""
              transition all 0.8s ease
              absolute left 0 top 0
              width 0
              opacity 1
              height 100%
              background Cyellow
            &.w1
              &:after
                width 33.33%
            &.w2
              &:after
                width 66.66%
            &.w3
              &:after
                width 100%
            &.event_title
              height: 30px;
              font-size: 15px;
              line-height: 26px;
              color: Cyellow;
              width: 100%;
              margin-left: 0;
              background: rgba(10, 81, 109, 0.5);
              &:after
                background transparent
                opacity 0
              &:before
                background transparent
      &.day_title
        display: block;
        width: 100%;
        font-size: 40px;
        height: 90px;
        text-shadow: 1px 1px rgba(0,0,0,0.4);
        line-height: 60px !important;
        &:before
          background-image: url("data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI4IiBoZWlnaHQ9IjgiPjxwYXRoIGQ9Ik0tMiAxMEwxMCAtMlpNMTAgNkw2IDEwWk0tMiAyTDIgLTIiIHN0cm9rZT0iIzBBNTE2RCIgc3Ryb2tlLXdpZHRoPSI0LjUiPjwvcGF0aD4KPC9zdmc+"),url("data:image/svg+xml;base64,");
        > .day_num
            line-height 60px
            font-size: 40px;
            height: 90px;
        >i
          position: absolute;
          left: 10px;
          font-size: 0;
          line-height 0
          top 0
          color #fff
          z-index: 100;
          transition all 0.4s ease
          /*transition-delay 0.6s*/
          opacity: 0.8;
          &:hover
            opacity 1
          &.ion-arrow-right-a
            left auto
            right 10px
          &.active
            font-size: 30px;
            line-height 60px
    &.names
      opacity 1
      height 40px !important
      transition all 0.4s ease
      &.shrink
        opacity 0
        width: 0 !important;
        height: 0 !important;
      > span
        color: #005BC5;
        font-size: 14px;
        font-weight: 500;
        line-height: 40px !important;
        background #f5f5f5

  .timebar
    float: left;
    width: 100%;
    /*padding-top: 8px;*/
    /*border-top: 1px solid rgba(90, 90, 90, 1);*/
    background: #fff;
    opacity 0
    overflow hidden
    transition all 0.2s anim_func
    .hour
      float: left;
      width: 100%;
      display: block;
      opacity 0
      height 0
      margin-top -10px
      margin-left: -10px;
      transition all 0.3s anim_func
      &.active-remove
        transition-delay none !important
      .left
        width: 80px;
        text-align: center;
        /*border-right: 1px solid #eee;*/
        /*background: #f5f5f5;*/
        line-height: 30px;
        vertical-align: middle;
        height 40px
        font-size: 13px;
        float left
        position relative
        &:before
          content: "";
          position: absolute;
          width: 2px;
          height: 100%;
          left: calc(50% - 1px);
          background: rgba(0, 102, 255, 0.6);
        > span
          width: 28px;
          display: block;
          margin: 0 auto;
          height: 28px;
          line-height: 28px;
          vertical-align: middle;
          margin-top: 5px;
          background: #eee;
          border-radius: 50%;
          text-align: center;
          color: Cblue;
          border: 1px solid #e5e5e5;
          font-size: 11px;
          position: relative;
          &.active
            background: rgba(0, 102, 255, 0.8);
      .right
        display: flex;
        border-bottom: 1px solid #eee;
        height: 39px;
        width: calc(100% - 81px);
      &.active
        height 40px
        margin-left: 0;
        opacity 1
        margin-top 0
        transition-delay 0
    &.active
      opacity 1
    &.ng-hide-add{
      animation:0.4s slideInUp anim_func;
      opacity 1
    }

    .fullday_wrap
      float: left;
      width: 100%;
      display: block;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
      transition none
      .fullday_title
        line-height: 30px;
        background: rgba(0,174,128,1);
        background: -moz-radial-gradient(center, ellipse cover, rgba(0,174,128,1) 0%, #00B384 100%);
        background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%, rgba(0,174,128,1)), color-stop(100%, #00B384));
        background: -webkit-radial-gradient(center, ellipse cover, rgba(0,174,128,1) 0%, #00B384 100%);
        background: -o-radial-gradient(center, ellipse cover, rgba(0,174,128,1) 0%, #00B384 100%);
        background: -ms-radial-gradient(center, ellipse cover, rgba(0,174,128,1) 0%, #00B384 100%);
