@import url(http://fonts.googleapis.com/css?family=Roboto:500,400italic,300,700,400);
//C-color, F-font
Froboto='Roboto', sans-serif;
Cred=#FC284F  //Red color - Arya core color
Cblue=#0A516D  //Blue color - Links and Action color
Cgreen=#036564  //Green color - Major Titles and Action color
Cyellow=#F8A13F  //Yellow color - User interaction and user area color
Cpurple=#1A081F  //Purple color - Borders, seperators, Title color
Clightgreen=#61C155  //Light green color - Alternate color and minimal usage

/*White variant colors*/
Cff=#fff
Cfc=#fcfcfc
Cfa=#fafafa
Cf1=#f1f1f1
Cf5=#f5f5f5
Ceee=#eee
Cddd=#ddd
Cccc=#ccc
Caaa=#aaa
C999=#999

anim_func=cubic-bezier(0.495, 1.415, 0.760, 1.035)


//Postions functions example
/*absolute: top 150px left 5px*/
/*fixed: top left*/

-pos(type, args)
  i = 0
  position: unquote(type) !important
  {args[i]}: args[i + 1] is a 'unit' ? args[i += 1]  !important : 0
  {args[i += 1]}: args[i + 1] is a 'unit' ? args[i += 1] !important : 0
absolute()
  -pos('absolute', arguments)

fixed()
  -pos('fixed', arguments)

/*vandor prefixes*/

vendors = webkit moz o ms official

border-radius()
  for vendor in vendors
    if vendor == official
      border-radius: arguments
    else
      -{vendor}-border-radius: arguments


transition()
  for vendor in vendors
    if vendor == official
      transition: arguments
    else
      -{vendor}-transition: arguments



animation()
  for vendor in vendors
    if vendor == official
      animation: arguments
    else
      -{vendor}-animation: arguments

transform()
  for vendor in vendors
    if vendor == official
      transform: arguments
    else
      -{vendor}-transform: arguments


box-shadow()
  for vendor in vendors
    if vendor == official
      box-shadow: arguments
    else
      -{vendor}-box-shadow: arguments


body,
html
  font-family Froboto
  background #f1f1f1

html
  min-height: 100%;
  height: 100%;
  margin: 0;
  padding: 0;

body
  padding 50px 0
  line-height 1.5
  letter-spacing: .1px;
  min-height: 100%;
  height: 100%;
  margin: 0;
  position relative

a
  color inherit
  &:link,&:visited,&:active,&:focus
