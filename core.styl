          width 100%
          height 100%
          opacity 0.4
        > span
          color #555
          position relative
          line-height: 40px;
          font-size: 14px;
          > i
            padding-right: 5px;

    .hour
      &.noevent
        height: 0;
        .left
          height: 20px;
          &:before
            background #ddd
          span
            height: 20px;
            margin-top: 0px;
            line-height: 18px;
            background: #FFF;
            border: none;
            color: #aaa;
        .right
          height: 19px;
    &.active
      .hour
        &.noevent
          height: 20px;

    .hour
      .right
        display flex
        > div
          flex 1
        .right_event_flex
            display block
            height: 39px;
            border-right: 1px solid #eee;
            transition all 0.2s ease
            box-shadow: inset 0px 0px 50px 0px rgba(255, 255, 255, 0.15);
            position relative
            > .name
              display block
              width 100%
              font-size: 12px;
              line-height: 40px;
              white-space: nowrap;
              position relative
              overflow: hidden;
              color: rgba(255, 255, 255, 0.75);
              transition all 0.3s ease
              text-overflow: ellipsis;
            > .time
              display block
              width: 100%;
              font-size: 0;
              opacity 0
              line-height: 20px;
              position relative
              white-space: nowrap;
              overflow: hidden;
              transition all 0.3s ease
              text-overflow: ellipsis;
              color: #bbb;
            .black_bg
              absolute left 0 top 0
              width 100%
              height 100%
              background #006699
              opacity 0.4
            &:hover
              cursor pointer
              box-shadow: inset 0px 0px 0px 0px rgba(255, 255, 255, 0.5);
              background: #AD00AB !important;
              > .name
                color: #fff;
                line-height: 20px;
              > .time
                font-size: 11px;
                opacity 1




@keyframes color_change {
  0% {
    color Clightgreen
  }
  100% {
    color Cyellow
  }
}

@keyframes loading_spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(359deg);
  }
}